      "multi-room",
      "low latency",
      "fast",
      "nabu",
      "xiaozhi"
    ]
  },
  "esm": true,
  "flow": {
    "actions": [
      {
        "id": "mute",
        "title": {
          "en": "Mute"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=home-assistant-voice-preview-edition"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Home Assistant Voice PE"
      },
      "class": "other",
      "discovery": "esphome",
      "capabilities": [
        "volume_set",
        "listening",
        "volume_mute"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/home-assistant-voice-preview-edition/assets/images/small.png",
        "large": "/drivers/home-assistant-voice-preview-edition/assets/images/large.png",
        "xlarge": "/drivers/home-assistant-voice-preview-edition/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "home-assistant-voice-preview-edition"
    },
    {
      "name": {
        "en": "Xiaozhi AI"
      },
      "class": "other",
      "discovery": "esphome",
      "capabilities": [
        "listening"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/xiaozhi-ai/assets/images/small.png",
        "large": "/drivers/xiaozhi-ai/assets/images/large.png",
        "xlarge": "/drivers/xiaozhi-ai/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "xiaozhi-ai"
    }
  ],
  "capabilities": {
    "listening": {
      "type": "boolean",
      "title": {
        "en": "Listening"
      },
      "getable": true,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "/assets/listening.svg"
    }
  },
  "discovery": {
    "esphome": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "esphomelib",
        "protocol": "tcp"
      },
      "id": "{{txt.mac}}",
      "conditions": [
        [
          {
            "field": "txt.platform",
            "match": {
              "type": "regex",
              "value": "esp32"
            }
          }
        ]
      ]
    }
  }
}