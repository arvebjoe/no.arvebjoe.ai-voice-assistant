      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/xiaozhi-ai/assets/images/small.png",
        "large": "/drivers/xiaozhi-ai/assets/images/large.png",
        "xlarge": "/drivers/xiaozhi-ai/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "xiaozhi-ai"
    }
  ],
  "capabilities": {
    "alert_listening": {
      "type": "boolean",
      "title": {
        "en": "Listening"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "icon": "/assets/listening.svg"
    }
  },
  "discovery": {
    "esphome": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "esphomelib",
        "protocol": "tcp"
      },
      "id": "{{txt.mac}}",
      "conditions": [
        [
          {
            "field": "txt.platform",
            "match": {
              "type": "regex",
              "value": "esp32"
            }
          }
        ]
      ]
    }
  }
